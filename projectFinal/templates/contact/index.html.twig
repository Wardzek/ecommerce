{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block main %}
    <h2 class="text-center m-2">CONTACTEZ-NOUS ICI !</h2>
    <div class="bg-white p-5 contact-form vh-100">
        <div class="form-group">
            {{ form_start(our_form) }}
            {{ form_row(our_form.fullName, {'attr': {'class': 'form-control'}}) }}


        </div>
        <div class="form-group">
            {{ form_row(our_form.email, {'attr': {'class': 'form-control'}}) }}

        </div>
        <div class="form-group">
            {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}

        </div>

        <div class="form-group">
            <input type="submit" value="Envoyer" class="btn btn-dark py-3 px-5">
        </div>
        {{ form_end(our_form) }}
    </div>

    </div>
{% endblock %}
